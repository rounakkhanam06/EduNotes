<body class="class-content">
    <header class="text-white text-center py-3 custom-header" style="background: linear-gradient(to right, #b2f7ef, #a0eac9); ">
        <div class="container">
            <!-- <h1>Classroom</h1> -->
            <% if (user) { %>
                <!-- <p class="mt-3">Welcome,!</p> -->
                 
        <a href="/profile" class="btn btn-secondary mt-3 ml-2 back"><i class="fa-solid fa-arrow-left-long"></i> Back to Dashboard</a>
            <% } else { %>
                <p class="mt-3">
                    Please <a href="/auth/login" class="text-light">login</a>.
                </p>
            <% } %>
        </div>
    </header>
  
    <main class="container mt-5">
      <h2>All Classes</h2>
      <table class="table table-striped">
          <thead>
              <tr>
                  <th>S no.</th>
                  <th>Name</th>
                  <th>Teacher</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
              <% if (classes.length > 0) { %>
                  <% classes.forEach(function(classItem, index) { %>
                      <tr>
                          <td><%= index + 1 %></td>
                          <td>
                              <a href="/class/<%= classItem._id %>" class="text-decoration-none">
                                  <%= classItem.name %>
                              </a>
                          </td>
                          <td><%= classItem.Teacher ? classItem.Teacher.username : 'N/A' %></td>
                          <td>
                              <!-- Delete Button -->
                              <form action="/admin/delete-class/<%= classItem._id %>" method="POST"  onsubmit="return confirm('Are you sure you want to delete this note?');"style="display:inline;">
                                  <button type="submit" class="btn btn-link p-0" title="Delete" >
                                      <i class="fas fa-trash" style="color: red;"></i>
                                  </button>
                              </form>
                          </td>
                      </tr>
                  <% }); %>
              <% } else { %>
                  <tr>
                      <td colspan="4">No classes found.</td>
                  </tr>
              <% } %>
          </tbody>
      </table>
  </main>
  
  </body>
  <style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(to right, #b2f7ef, #a0eac9); 
  }
  </style>