<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>login form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .btn-color {
        background-color: #0e1c36;
        color: #fff;
      }

      .profile-image-pic {
        height: 100px;
        width: 100px;
        object-fit: cover;
      }

      .cardbody-color {
        background-color: #ebf2fa;
      }

      a {
        text-decoration: none;
      }
    </style>
  </head>
  <body style="padding-top:5rem ;">
      <!-- Custom message -->
      <% if (message.type === 'success') { %>
        <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
           <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
           <strong style="color:black;"><%= message.message %></strong>
        </div>
       <% }else if (message.type === 'error') { %>
        <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
           <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
           <strong style="color:black;"><%= message.message %></strong>
        </div>
       <% } %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card my-5 border-dark-subtle shadow-lg">
            <h2 class="text-center text-dark text-uppercase fw-bold mt-5">
              Log in
            </h2>
            <form
              class="card-body cardbody-color p-lg-5"
              action="/login"
              method="POST"
            >
              <!-- <div class="text-center">
                <img
                  src="https://takshshila.org/wp-content/uploads/2021/05/aboutus.jpg"
                  class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                  width="100px"
                  alt="profile"
                />
              </div> -->

              <div class="mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  pattern=".*0207.*@[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}$"
                  title="Email must include '0207'"
                  aria-describedby="emailHelp"
                  placeholder="User Name"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="password"
                  required
                />
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-warning px-5 mb-5 w-100">
                  Login
                </button>
              </div>
              <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                Not Registered?
                <a href="/signup" class="text-dark fw-bold">
                  Create an Account</a
                >
              </div>
              <button
                type="button"
                class="btn btn-dark"
                onclick="window.location.href='/'"
              >
                Back to home
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
